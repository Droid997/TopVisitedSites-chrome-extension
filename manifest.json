 {
    "name": "Top Visited Sites",
    "version": "1.0",
    "description": "Your Top visited List in one Place!",
    "manifest_version": 2,
	"browser_action": {
          "default_title": "Top Visited Sites",      
           "default_title": "Top Visited Sites",
			"default_popup":"popup.html",
			"default_icon": {                    
            "16": "images/icon16.png",           
            "24": "images/icon24.png",           
            "32": "images/icon32.png"           
          }			
        },
		"icons": { 
			"16": "images/icon16.png",
           "48": "images/icon48.png",
			"128": "images/icon128.png" },
	"background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	 "permissions": [
          "system.storage","topSites","storage","tabs"
        ],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/; object-src 'self'"
  }